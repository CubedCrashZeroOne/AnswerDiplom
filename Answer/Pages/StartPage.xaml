<Page x:Class="DiplomAnswerProject.StartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DiplomAnswerProject"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="440"
      Title="StartPage">

    <StackPanel>

        <TextBox x:Name="LoginBox" Height="22" Width="161" Margin="0 250 0 0" Style="{DynamicResource TextBoxStyle}" BorderBrush="{x:Null}">
        </TextBox>

        <PasswordBox x:Name="PasswordBox" Height="22" Width="161" Margin="0 20 0 0" Style="{DynamicResource PasswordBoxStyle}" BorderBrush="Transparent">
        </PasswordBox>

        <Button x:Name="LoginButton" Content="Увійти" Margin="0 20 0 0" Height="48" Width="191" BorderBrush="{x:Null}" Style="{DynamicResource ButtonStyle}" Click="LoginButton_Click">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="30"/>
                </Style>
            </Button.Resources>
        </Button>
    </StackPanel>
</Page>
